    "long_description": "A comprehensive Python-based RPA framework that automates documents, spreadsheets, PDFs, web scraping, APIs, databases, and desktop tasks. Deploy on IBM Cloud and scale your automation workflows.",
    "features": [
        {
            "title": "Document Automation",
            "description": "Create Word documents, PDFs, Markdown, and HTML reports"
        },
        {
            "title": "Data Processing",
            "description": "Process Excel, CSV files with pandas integration"
        },
        {
            "title": "Web Scraping",
            "description": "Extract data from websites with BeautifulSoup and Selenium"
        },
        {
            "title": "API Integration",
            "description": "Connect to REST APIs with retry logic and authentication"
        },
        {
            "title": "Database Operations",
            "description": "SQLite, PostgreSQL, MySQL support via SQLAlchemy"
        },
        {
            "title": "Workflow Orchestration",
            "description": "Chain automation steps with error handling"
        }
    ],
